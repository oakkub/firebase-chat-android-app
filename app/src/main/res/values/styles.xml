<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/nearTransparent</item>

        <!-- Button style -->
        <item name="buttonStyle">@style/DefaultButtonStyle</item>
        <item name="colorButtonNormal">@color/colorAccent</item>

        <!-- EditText style -->
        <item name="editTextStyle">@style/DefaultEditTextStyle</item>

        <item name="alertDialogTheme">@style/AppAlertDialogTheme</item>

    </style>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FabStyle" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccentDark</item>
        <item name="pressedTranslationZ">@dimen/spacing_small</item>
    </style>

    <style name="SmallProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar.Small" />

    <style name="MediumProgressBarStyle" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:minWidth">@dimen/spacing_medium</item>
        <item name="android:maxWidth">@dimen/spacing_medium</item>
        <item name="android:minHeight">@dimen/spacing_medium</item>
        <item name="android:maxHeight">@dimen/spacing_medium</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <!--<item name="cardCornerRadius">@dimen/spacing_smaller</item>-->
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/MyTextTapAppearance</item>
    </style>

    <style name="MyTextTapAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewSingleLineStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="TextViewMessageStyle">
        <item name="android:gravity">center</item>
        <item name="android:minEms">@integer/min_ems</item>
        <item name="android:maxEms">@integer/max_ems</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextWithTextInputLayoutStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="EditTextWithTextInputLayoutStyle.MultiLine">
        <item name="android:maxLines">4</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="CounterTextAppearance">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="CounterOverflowTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="counterOverflowTextAppearance">@style/CounterOverflowTextAppearance</item>
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>
    </style>

    <style name="DefaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="DefaultEditTextStyle.MultiLine">
        <item name="android:maxLines">4</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FullWidthButtonStyle">
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="BottomDialogButtonStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="MaterialDialogSheet" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ScalingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_up</item>
        <item name="android:windowExitAnimation">@anim/scale_down</item>
    </style>

    <style name="SheetItemStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:drawablePadding">@dimen/spacing_super_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ButtonDialogStyle" parent="DefaultButtonStyle">
        <item name="android:padding">@dimen/spacing_smaller</item>
        <item name="android:drawablePadding">@dimen/spacing_smaller</item>
    </style>

    <style name="FacebookButtonStyle" parent="DefaultButtonStyle">
        <item name="android:drawableLeft">@drawable/facebook_logo_white</item>
        <item name="android:drawableStart">@drawable/facebook_logo_white</item>
    </style>

    <style name="GoogleButtonStyle" parent="DefaultButtonStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/spacing_slightly_bigger</item>
        <item name="android:paddingStart">@dimen/spacing_slightly_bigger</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="itemBackground">@android:color/white</item>
        <item name="itemIconTint">@color/colorAccent</item>
    </style>

    <style name="NavigationViewTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/font_bigger</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ThemeNoDisplay" parent="@android:style/Theme.NoDisplay" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar.BackgroundColorPrimary">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.DialogActivity">
        <item name="android:clickable">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/ScalingDialogAnimation</item>
    </style>

</resources>
