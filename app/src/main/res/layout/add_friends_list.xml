<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simpleInfoButtonContainer"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:divider="@drawable/spacer_large"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        android:showDividers="middle">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleInfoButtonProfileImageView"
            android:layout_width="@dimen/spacing_bigger2"
            android:layout_height="@dimen/spacing_bigger2"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/simpleInfoButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2" />

        <Button
            android:id="@+id/simpleInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/add" />

    </LinearLayout>

</android.support.v7.widget.CardView>
