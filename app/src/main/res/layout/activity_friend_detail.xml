<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_detail_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.oakkub.chat.activities.FriendDetailActivity">

    <LinearLayout
        android:id="@+id/friend_detail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/spacer_medium"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/friend_detail_profile_image_view"
            android:layout_width="@dimen/spacing_large"
            android:layout_height="@dimen/spacing_large"
            android:elevation="@dimen/spacing_smaller"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/friend_detail_display_name_text_view"
            style="@style/TextViewHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/friend_detail_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_sms_24dp"
            android:drawableStart="@drawable/ic_sms_24dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/chat" />

    </LinearLayout>

</android.support.v7.widget.CardView>
