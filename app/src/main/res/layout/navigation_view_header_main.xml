<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:divider="@drawable/spacer_small"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small"
    android:showDividers="middle">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/navigation_header_image"
            android:layout_width="@dimen/spacing_bigger2"
            android:layout_height="@dimen/spacing_bigger2"
            android:layout_gravity="start|bottom"
            fresco:progressBarImage="@drawable/simple_progress"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="@dimen/spacing_smaller"
            fresco:roundingBorderColor="@android:color/white" />

    </FrameLayout>

    <TextView
        android:id="@+id/navigation_header_display_name_textview"
        style="@style/TextViewSingleLineStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/navigation_header_email_textview"
        style="@style/TextViewSingleLineStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white" />

</LinearLayout>