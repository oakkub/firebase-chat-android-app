<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/simple_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small" >

        <EditText
            android:id="@+id/new_messages_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/new_messages"
            android:layout_toLeftOf="@+id/new_messages_button"
            android:layout_toStartOf="@+id/new_messages_button" />

        <Button
            android:id="@+id/new_messages_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messenger_send_button_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/test_image"
        android:layout_width="@dimen/spacing_larger"
        android:layout_height="@dimen/spacing_larger"
        android:layout_gravity="center"
        fresco:roundAsCircle="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <include layout="@layout/recyclerview" />

</LinearLayout>